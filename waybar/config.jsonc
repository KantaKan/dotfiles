  },

  "network": {
    "format-wifi": "{essid} Ôá´",
    "format-ethernet": "{ifname}: {ipaddr}",
    "format-disconnected": "Disconnected ‚ö†",
    "on-click": "sh -c 'command -v nm-connection-editor >/dev/null && nm-connection-editor || (command -v kitty >/dev/null && kitty -e nmtui || command -v foot >/dev/null && foot -e nmtui || command -v alacritty >/dev/null && alacritty -e nmtui || command -v wezterm >/dev/null && wezterm start -- nmtui)'",
  },
  "hyprland/language": {
    "format": "{}",
    "format-en": "ENG",
    "format-th": "‡πÑ‡∏ó‡∏¢",
  },
  "mpris": {
    "format": "{status_icon} {artist} - {title}",
    "format-paused": "{status_icon} {artist} - {title}",
    "max-length": 36,
    "ellipsize": "end",
    "tooltip": true,
    "tooltip-format": "{player_icon} {artist}\n{album}\n{title}",
    "player-icons": { "default": "üéµ" },
    "status-icons": { "paused": "‚è∏", "playing": "‚ñ∂", "stopped": "‚èπ" },
    "on-click": "playerctl play-pause",
