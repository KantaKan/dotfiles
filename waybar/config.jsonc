    "on-scroll-down": "playerctl previous",
  },
  "tray": {
    "icon-size": 16,
    "spacing": 6, // This adds 6px spacing between tray icons
    "show-passive-items": true,
  },

  // Custom microphone control/status
  "custom/mic": {
    "format": "{}",
    "tooltip": true,
    "return-type": "json",
    "interval": 2,
    "exec": "/home/dog/.config/waybar/scripts/mic.sh",
    "on-click": "/home/dog/.config/waybar/scripts/mic.sh toggle",
    "on-click-right": "/home/dog/.config/waybar/scripts/mic.sh toggle",
  },

  "temperature": {
